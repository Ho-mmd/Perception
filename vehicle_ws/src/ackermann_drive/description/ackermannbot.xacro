<?xml version='1.0'?>
<robot name="ackermannbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- LINK: base_footprint -->
  <link name="base_footprint"></link>

  <!-- LINK: chassis -->
  <link name='chassis'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision name='chassis_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".4 .2 .1"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".4 .2 .1"/>
      </geometry>
    </visual>
  </link>

  <!-- LINK: main_steer -->
  <link name='main_steer'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision name='main_steer_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision>

    <visual name='main_steer_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </visual>
  </link>

  <!-- LINK: left_steer -->
  <link name='left_steer'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision name='left_steer_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision>

    <visual name='left_steer_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </visual>
  </link>

  <!-- LINK: right_steer -->
  <link name='right_steer'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision name='right_steer_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision>

    <visual name='right_steer_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </visual>
  </link>

  <!-- LINK: front_left_wheel -->
  <link name="front_left_wheel">
    <inertial>
      <mass value="8.0"/>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- LINK: back_left_wheel -->
  <link name="back_left_wheel">
    <inertial>
      <mass value="8.0"/>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- LINK: front_right_wheel -->
  <link name="front_right_wheel">
    <inertial>
      <mass value="8.0"/>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- LINK: back_right_wheel -->
  <link name="back_right_wheel">
    <inertial>
      <mass value="8.0"/>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </visual>
  </link>

  <!-- LINK: lidar -->
  <link name="lidar">
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>

    <visual name="lidar_visual">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.15" radius="0.1"/>
      </geometry>
    </visual>

    <collision name="lidar_colision">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.15" radius="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- JOINT: chassis -->
  <joint name="chassis_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="chassis"/>
  </joint>

  <!-- JOINT: main_steer -->
  <joint type="continuous" name="main_steer_joint">
    <origin xyz="0 0 1" rpy="0 0 0"/>
    <child link="main_steer"/>
    <parent link="base_footprint"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- JOINT: left_steer -->
  <joint type="continuous" name="left_steer_joint">
    <origin xyz="0 1 0" rpy="0 0 0"/>
    <child link="left_steer"/>
    <parent link="base_footprint"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- JOINT: right_steer -->
  <joint type="continuous" name="right_steer_joint">
    <origin xyz="0 -1 0" rpy="0 0 0"/>
    <child link="right_steer"/>
    <parent link="base_footprint"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- JOINT: wheel -->
  <joint type="continuous" name="front_left_wheel_joint">
    <origin xyz="0.13 0.15 0" rpy="0 0 0"/>
    <child link="front_left_wheel"/>
    <parent link="base_footprint"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- JOINT: wheel -->
  <joint type="continuous" name="front_right_wheel_joint">
    <origin xyz="0.13 -0.15 0" rpy="0 0 0"/>
    <child link="front_right_wheel"/>
    <parent link="base_footprint"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- JOINT: wheel -->
  <joint type="continuous" name="back_left_wheel_joint">
    <origin xyz="-0.13 0.15 0" rpy="0 0 0"/>
    <child link="back_left_wheel"/>
    <parent link="base_footprint"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- JOINT: wheel -->
  <joint type="continuous" name="back_right_wheel_joint">
    <origin xyz="-0.13 -0.15 0" rpy="0 0 0"/>
    <child link="back_right_wheel"/>
    <parent link="base_footprint"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- JOINT: lidar -->
  <joint type="fixed" name="lidar_joint">
    <origin xyz="0 0 0.125" rpy="0 0 0"/>
    <child link="lidar"/>
    <parent link="base_footprint"/>
    <axis xyz="0 0 1" rpy="0 0 0"/>
  </joint>

  <!-- COLOR: chassis -->
  <gazebo reference="chassis">
    <material>Gazebo/Orange</material>
  </gazebo>

  <!-- COLOR: wheel -->
  <gazebo reference="front_left_wheel">
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- COLOR: wheel -->
  <gazebo reference="back_left_wheel">
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- COLOR: wheel -->
  <gazebo reference="front_right_wheel">
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- COLOR: wheel -->
  <gazebo reference="back_right_wheel">
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- COLOR: lidar -->
  <gazebo reference="lidar">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- PLUGIN: drive -->
  <gazebo>
    <plugin name="ackermann_drive_controller" filename="libgazebo_ros_ackermann_drive.so">
      <ros>
        <namespace>demo</namespace>
        <remapping>cmd_vel:=cmd_vel</remapping>
        <remapping>odom:=odom</remapping>
        <remapping>distance:=distance</remapping>
      </ros>

      <update_rate>100.0</update_rate>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>

      <front_left_joint>front_left_wheel_joint</front_left_joint>
      <front_right_joint>front_right_wheel_joint</front_right_joint>
      <rear_left_joint>back_left_wheel_joint</rear_left_joint>
      <rear_right_joint>back_right_wheel_joint</rear_right_joint>

      <left_steering_joint>left_steer_joint</left_steering_joint>
      <right_steering_joint>right_steer_joint</right_steering_joint>
      <steering_wheel_joint>main_steer_joint</steering_wheel_joint>
      
      <max_steer>0.6458</max_steer>
      <max_steering_angle>7.85</max_steering_angle>
      <max_speed>20</max_speed>

      <!-- <left_steering_pid_gain>1500 0 1</left_steering_pid_gain>
      <left_steering_i_range>0 0</left_steering_i_range>
      <right_steering_pid_gain>1500 0 1</right_steering_pid_gain>
      <right_steering_i_range>0 0</right_steering_i_range>
      <linear_velocity_pid_gain>1000 0 1</linear_velocity_pid_gain>
      <linear_velocity_i_range>0 0</linear_velocity_i_range> -->

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <publish_distance>true</publish_distance>
    </plugin>
  </gazebo>

  <!-- PLUGIN: sensor -->
  <gazebo reference="lidar">
    <sensor type="ray" name="lidar_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>40</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>600</samples>
            <resolution>1</resolution>
            <min_angle>-3.141592</min_angle>
            <max_angle>3.141592</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.15</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <update_rate>30</update_rate>
      <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <argument>~/out:=scan</argument>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
      </plugin>
    </sensor>
  </gazebo>

</robot>